---
import { SITE_LOGO, SITE_TITLE } from "@src/config";
import Menus from "./menus.astro";
---

<header
	class="sticky z-50 top-0 bg-white/80 dark:bg-black/80
     backdrop-blur-xl transition-all select-none bg-gradient-to-b from-orange-50
      dark:from-base-300"
>
	<div
		class="flex flex-row gap-8 items-center justify-between max-w-screen-lg mx-auto h-16 px-4 sm:px-6"
	>
		<a href="/" class="flex flex-row items-center justify-center gap-2">
			<img src={SITE_LOGO} alt="author avatar" class="w-10 rounded-full aspect-square" />
			<span class="text-orange-600 font-title font-bold ">{SITE_TITLE}</span>
		</a>
		<Menus />
		<script>
			if (localStorage.theme === "dark") {
				document.body.setAttribute("data-theme", "dark");
			} else {
				document.body.setAttribute("data-theme", "light");
			}
		</script>
	</div>
</header>
