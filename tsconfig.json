{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"strictNullChecks": true,
		"jsx": "preserve",
		"jsxImportSource": "react",
		"verbatimModuleSyntax": true,
		"esModuleInterop": true,
		"paths": {
			"@src/*": ["./src/*"],
			"@components/*": ["./src/components/*"],
			"@styles/*": ["./src/styles/*"],
			"@mdx/*": ["./src/components/mdx/*"],
			"@helpers": ["./src/helpers/index.ts"],
			"@helpers/*": ["./src/helpers/*"]
		},
		"baseUrl": "./"
	},
	"include": ["src"],
	"exclude": ["dist"]
}
